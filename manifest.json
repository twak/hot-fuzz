{
  "manifest_version": 2,

  "name": "HotFuzz",
  "description": "Continuously visits dubious websites",
    "version": "1.0",
    
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "hotFuzz"
  },
    
    "permissions": [
	"storage", "alarms"
  ]
}
